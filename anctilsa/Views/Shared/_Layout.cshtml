<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - Samuel Anctil</title>
        <style type="text/css">
            @@import url(/css/style.css);
            /*@@import url(/lib/bootstrap/dist/css/bootstrap.css);*/
        </style>
    </head>
    <body>
        <nav id="main-menu">
            <ul>
                <li><a onclick="jump('first')">Curriculum vitea</a></li>
            </ul>
        </nav>
        <header>
            <div class="color-picker">

            </div>
            <div id="header" class="container">
                <div class="row">
                    <section class="col-8">
                        <h1 class="no-margin">Samuel Anctil</h1>
                        <h2 class="no-margin">Développeur</h2>
                    </section>
                    <div class="col-4">
                        <div class="hexagon" id="hexagon-border">
                            <div class="hexagon-in-1">
                                <div class="hexagon-in-2">
                                </div>
                            </div>
                        </div>
                        <div class="hexagon" id="hexagon-image">
                            <div class="hexagon-in-1">
                                <div class="hexagon-in-2">
                                    <div></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <div id="content">
            <main>
                @RenderBody()
            </main>
        </div>
        <footer>
            <section>
                <h3>&copy; 2017 - Samuel Anctil - <a href="https://github.com/anctilsa/anctilsa/tree/8b0858f0b0f004d13a050561cdb92ff185aa5da3" target="_blank">Voir les sources</a></h3>
            </section>
        </footer>
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </body>
</html>
